/**app.wxss**/
page {
  background-color: #020617;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
}

.btn-primary {
  background-color: #4ade80;
  color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
}

.btn-primary:active {
  background-color: #22c55e;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #4ade80;
}

.error-text {
  color: #ef4444;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.success-text {
  color: #4ade80;
  font-size: 24rpx;
  margin-top: 10rpx;
}
