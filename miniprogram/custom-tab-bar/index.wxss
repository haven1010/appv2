/* custom-tab-bar/index.wxss */
.tab-bar {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: #0f172a;
  border-top: 1rpx solid rgba(100, 116, 139, 0.2);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 10rpx;
  position: relative;
}

.tab-icon-text {
  font-size: 44rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  /* 默认不选中时降低透明度 */
  opacity: 0.5;
}

.tab-bar-item.active .tab-icon-text {
  opacity: 1;
}

.tab-text {
  font-size: 20rpx;
  color: #64748b;
  line-height: 1.4;
}

.tab-bar-item.active .tab-text {
  color: #34d399;
}

/* 选中时底部指示条 */
.tab-bar-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #34d399;
  border-radius: 4rpx;
}
