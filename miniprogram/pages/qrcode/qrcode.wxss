/* pages/qrcode/qrcode.wxss */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.qr-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.qr-code {
  background-color: #f9fafb;
  border: 4rpx dashed #4ade80;
  border-radius: 16rpx;
  padding: 60rpx;
  text-align: center;
}

.qr-text {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  display: block;
  margin-bottom: 20rpx;
}

.qr-tip {
  font-size: 24rpx;
  color: #666;
  margin-top: 20rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.button-group {
  margin-top: 40rpx;
}

.btn-secondary {
  background-color: #6b7280;
  color: white;
  border-radius: 8rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
}

.info-box {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  font-size: 28rpx;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: bold;
}
