/* pages/qrcode/qrcode.wxss - 深色主题 */
.page {
  min-height: 100vh;
  background: #020617;
  padding: 40rpx;
}

.card {
  background: rgba(15, 23, 42, 0.8);
  border-radius: 32rpx;
  padding: 48rpx;
  border: 1rpx solid rgba(52, 211, 153, 0.2);
  text-align: center;
}

.qr-icon {
  font-size: 64rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 48rpx;
}

.qr-box {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  min-height: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-image {
  width: 360rpx;
  height: 360rpx;
}

.qr-loading, .qr-error {
  color: #64748b;
  font-size: 28rpx;
}

.uid-box {
  background: rgba(15, 23, 42, 0.5);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
}

.uid-text {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #34d399;
  font-family: monospace;
  letter-spacing: 4rpx;
}

.valid-text {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  margin-top: 16rpx;
}

.btn-refresh {
  background: #34d399;
  color: white;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
}
