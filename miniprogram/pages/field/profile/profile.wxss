/* pages/field/profile/profile.wxss */
.page {
  min-height: 100vh;
  background: #020617;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

/* 头部 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0 32rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #1e293b;
  border: 4rpx solid #f59e0b;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 12rpx;
}

.user-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 8rpx;
}

.role-tag {
  background: rgba(245, 158, 11, 0.15);
  color: #f59e0b;
}

.uid-tag {
  background: rgba(100, 116, 139, 0.2);
  color: #94a3b8;
}

/* 加载 */
.loading-box {
  text-align: center;
  color: #64748b;
  padding: 80rpx 0;
  font-size: 28rpx;
}

/* 信息卡片 */
.info-card {
  background: rgba(15, 23, 42, 0.8);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(51, 65, 85, 0.4);
}

.card-content.empty {
  padding: 24rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #64748b;
}

.base-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 12rpx 0;
}

.base-icon {
  font-size: 40rpx;
}

.base-info {
  display: flex;
  flex-direction: column;
}

.base-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.base-id {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 4rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(51, 65, 85, 0.2);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #64748b;
}

.info-value {
  font-size: 26rpx;
  color: #f1f5f9;
}

/* 菜单列表 */
.menu-list {
  background: rgba(15, 23, 42, 0.8);
  border-radius: 24rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  margin-bottom: 40rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid rgba(51, 65, 85, 0.3);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.menu-icon {
  font-size: 36rpx;
}

.menu-label {
  font-size: 28rpx;
  color: #f1f5f9;
}

.menu-arrow {
  font-size: 32rpx;
  color: #475569;
}

/* 退出按钮 */
.btn-logout {
  background: rgba(239, 68, 68, 0.15);
  color: #f87171;
  border: 1rpx solid rgba(239, 68, 68, 0.3);
  border-radius: 20rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
}
