/* pages/field/records/records.wxss */
.page {
  min-height: 100vh;
  background: #020617;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

.records-header {
  margin-bottom: 24rpx;
}

.records-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #f1f5f9;
  display: block;
}

.records-base {
  font-size: 24rpx;
  color: #94a3b8;
  margin-top: 8rpx;
}

/* 日期切换器 */
.date-switcher {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 20rpx;
  padding: 20rpx 32rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  margin-bottom: 24rpx;
}

.date-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #f59e0b;
  background: rgba(245, 158, 11, 0.1);
  border-radius: 16rpx;
}

.date-display {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.date-value {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 4rpx;
}

/* 统计条 */
.count-bar {
  margin-bottom: 20rpx;
}

.count-text {
  font-size: 24rpx;
  color: #64748b;
}

.count-num {
  color: #f59e0b;
  font-weight: bold;
}

/* 加载 */
.loading-box {
  text-align: center;
  color: #64748b;
  padding: 80rpx 0;
  font-size: 28rpx;
}

/* 记录列表 */
.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.4);
}

.record-left {
  position: relative;
  flex-shrink: 0;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #1e293b;
  border: 2rpx solid #f59e0b;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #f59e0b;
}

.record-idx {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  background: #f59e0b;
  color: #fff;
  border-radius: 50%;
  font-size: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.record-center {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.record-detail {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 4rpx;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  flex-shrink: 0;
}

.record-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.record-status {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.record-status.checked {
  background: rgba(52, 211, 153, 0.15);
  color: #34d399;
}

/* 空状态 */
.empty-box {
  text-align: center;
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
}
