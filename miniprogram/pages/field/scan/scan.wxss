/* pages/field/scan/scan.wxss */
.page {
  min-height: 100vh;
  background: #020617;
  padding: 24rpx;
  padding-bottom: 140rpx;
}

.scan-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.scan-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #f1f5f9;
  display: block;
  margin-bottom: 12rpx;
}

.scan-base {
  font-size: 26rpx;
  color: #94a3b8;
}

.scan-base.warn {
  color: #f87171;
}

/* 扫码视觉区 */
.scan-area {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scan-visual {
  width: 480rpx;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.scan-frame {
  width: 400rpx;
  height: 400rpx;
  position: relative;
  margin-bottom: 24rpx;
}

.corner {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  border-color: #f59e0b;
  border-style: solid;
  border-width: 0;
}

.corner.tl {
  top: 0; left: 0;
  border-top-width: 6rpx;
  border-left-width: 6rpx;
  border-radius: 8rpx 0 0 0;
}

.corner.tr {
  top: 0; right: 0;
  border-top-width: 6rpx;
  border-right-width: 6rpx;
  border-radius: 0 8rpx 0 0;
}

.corner.bl {
  bottom: 0; left: 0;
  border-bottom-width: 6rpx;
  border-left-width: 6rpx;
  border-radius: 0 0 0 8rpx;
}

.corner.br {
  bottom: 0; right: 0;
  border-bottom-width: 6rpx;
  border-right-width: 6rpx;
  border-radius: 0 0 8rpx 0;
}

.scan-line {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #f59e0b, transparent);
  animation: scanAnim 2s ease-in-out infinite;
}

@keyframes scanAnim {
  0% { top: 24rpx; }
  50% { top: 376rpx; }
  100% { top: 24rpx; }
}

.scan-hint {
  font-size: 24rpx;
  color: #64748b;
}

/* 扫码按钮 */
.btn-scan {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  border: none;
}

.btn-scan[disabled] {
  opacity: 0.6;
}

.btn-scan-icon {
  font-size: 36rpx;
}

.btn-scan-text {
  font-size: 32rpx;
  color: #fff;
}

/* 手动输入 */
.manual-section {
  width: 100%;
  margin-top: 16rpx;
}

.manual-title {
  font-size: 24rpx;
  color: #64748b;
  text-align: center;
  margin-bottom: 16rpx;
}

.manual-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.manual-input {
  flex: 1;
  background: #0f172a;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #f1f5f9;
}

.btn-manual {
  background: #f59e0b;
  color: #fff;
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
}

/* 签到结果 */
.result-card {
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.result-card.success {
  background: linear-gradient(135deg, rgba(52, 211, 153, 0.15), rgba(16, 185, 129, 0.08));
  border: 2rpx solid rgba(52, 211, 153, 0.4);
}

.result-card.fail {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(220, 38, 38, 0.08));
  border: 2rpx solid rgba(239, 68, 68, 0.4);
}

.result-icon {
  font-size: 96rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.result-card.success .result-icon {
  color: #34d399;
}

.result-card.fail .result-icon {
  color: #f87171;
}

.result-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 12rpx;
}

.result-msg {
  font-size: 28rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.result-time {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 32rpx;
}

.btn-clear {
  display: inline-block;
  background: rgba(255, 255, 255, 0.1);
  color: #f1f5f9;
  padding: 16rpx 64rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

/* 扫码历史 */
.history-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.4);
}

.history-status {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.history-item.success .history-status {
  background: rgba(52, 211, 153, 0.2);
  color: #34d399;
}

.history-item.fail .history-status {
  background: rgba(239, 68, 68, 0.2);
  color: #f87171;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.history-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.history-msg {
  font-size: 22rpx;
  color: #64748b;
}

.history-time {
  font-size: 22rpx;
  color: #64748b;
  flex-shrink: 0;
}
