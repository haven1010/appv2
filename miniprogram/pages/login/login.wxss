/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #0f172a 0%, #020617 100%);
}

.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo-circle {
  width: 120rpx;
  height: 120rpx;
  background: rgba(52, 211, 153, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(52, 211, 153, 0.3);
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 2rpx;
}

.login-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1e293b;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 50rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f1f5f9;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  background: #fff;
  border-color: #34d399;
  box-shadow: 0 0 0 6rpx rgba(52, 211, 153, 0.1);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: #0f172a;
  height: 48rpx;
}

.placeholder {
  color: #94a3b8;
}

.error-msg {
  color: #ef4444;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  display: flex;
  align-items: center;
}

.error-msg::before {
  content: "⚠️";
  margin-right: 10rpx;
  font-size: 24rpx;
}

.login-btn {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 0;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.3);
  border: none;
}

.login-btn::after {
  border: none;
}

.login-btn-hover {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(16, 185, 129, 0.3);
  opacity: 0.9;
}

.footer-links {
  margin-top: 40rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.register-text {
  font-size: 26rpx;
  color: #64748b;
}

.register-link {
  color: #10b981;
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 10rpx;
}

.register-link:active {
  opacity: 0.7;
}
