.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #020617;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #1e293b;
  border-top: 4rpx solid #10b981;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #64748b;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #94a3b8;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #475569;
}

.job-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.job-card {
  background: rgba(15, 23, 42, 0.8);
  border: 1rpx solid rgba(51, 65, 85, 0.5);
  border-radius: 24rpx;
  padding: 30rpx;
}

.job-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f1f5f9;
  flex: 1;
}

.job-salary {
  font-size: 30rpx;
  font-weight: bold;
  color: #f59e0b;
  margin-left: 16rpx;
}

.job-base {
  margin-bottom: 16rpx;
}

.base-tag {
  display: inline-block;
  background: rgba(16, 185, 129, 0.15);
  color: #34d399;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.job-info {
  display: flex;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.info-item {
  font-size: 24rpx;
  color: #94a3b8;
}

.job-desc {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.job-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(51, 65, 85, 0.3);
}

.status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.status-open {
  background: rgba(16, 185, 129, 0.15);
  color: #34d399;
}

.status-closed {
  background: rgba(239, 68, 68, 0.15);
  color: #f87171;
}

.apply-btn {
  background: #10b981;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  padding: 10rpx 30rpx;
  border-radius: 16rpx;
}
