/* pages/job/detail/detail.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 120rpx; /* Space for fixed bottom button */
}

.card {
  background: #1e293b;
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.job-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 40rpx;
}

.job-info {
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #94a3b8;
  width: 200rpx;
}

.value {
  font-size: 28rpx;
  color: #f1f5f9;
  flex: 1;
  text-align: right;
}

.value.highlight {
  color: #34d399;
  font-weight: bold;
  font-size: 32rpx;
}

.job-description,
.job-requirements {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 24rpx;
  border-left: 8rpx solid #34d399;
  padding-left: 16rpx;
}

.job-description text,
.job-requirements text {
  font-size: 28rpx;
  color: #cbd5e1;
  line-height: 1.6;
}

.job-status {
  margin-top: 40rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: rgba(52, 211, 153, 0.2);
  color: #34d399;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background: #020617; /* Matches page background */
  border-top: 1px solid rgba(255, 255, 255, 0.05);
  box-sizing: border-box;
}

.btn-primary {
  width: 100%;
  background: #34d399;
  color: #fff;
  border-radius: 12rpx;
  font-weight: bold;
  font-size: 32rpx;
}

.btn-primary[disabled] {
  background: #334155 !important;
  color: #64748b !important;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #64748b;
  font-size: 28rpx;
}

