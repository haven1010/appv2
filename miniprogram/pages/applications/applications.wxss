/* pages/applications/applications.wxss */
.container {
  padding: 24rpx;
  min-height: 100vh;
  background: #020617;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 24rpx;
}

.loading-box, .empty-box {
  text-align: center;
  color: #64748b;
  padding: 60rpx 0;
  font-size: 28rpx;
}

.app-list, .pending-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.app-card {
  background: rgba(15, 23, 42, 0.8);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
}

.app-header {
  margin-bottom: 16rpx;
}

.app-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.app-base {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.app-status {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.status-ok { background: rgba(52, 211, 153, 0.2); color: #34d399; }
.status-fail { background: rgba(239, 68, 68, 0.2); color: #ef4444; }
.status-pending { background: rgba(245, 158, 11, 0.2); color: #f59e0b; }

.app-date {
  font-size: 24rpx;
  color: #64748b;
}

.pending-card {
  background: rgba(245, 158, 11, 0.08);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
}

.pending-header {
  margin-bottom: 16rpx;
}

.pending-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.pending-date {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
}

.pending-amount {
  font-size: 40rpx;
  font-weight: bold;
  color: #34d399;
  margin: 24rpx 0;
}

.btn-confirm {
  background: #34d399;
  color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.status-done {
  color: #64748b;
  font-size: 26rpx;
}
