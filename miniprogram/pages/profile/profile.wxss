/* pages/profile/profile.wxss - 深色主题 */
.page {
  min-height: 100vh;
  background: #020617;
  padding: 40rpx;
  padding-bottom: 120rpx;
}

.profile-header {
  text-align: center;
  padding: 48rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #0f172a;
  border: 8rpx solid #1e293b;
  margin: 0 auto 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  font-weight: bold;
  color: #34d399;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.user-tags {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.tag {
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(52, 211, 153, 0.1);
  color: #34d399;
  border: 1rpx solid rgba(52, 211, 153, 0.2);
}

.tag.uid {
  background: rgba(15, 23, 42, 0.8);
  color: #64748b;
  border-color: rgba(100, 116, 139, 0.3);
}

.menu-list {
  background: rgba(15, 23, 42, 0.8);
  border-radius: 32rpx;
  overflow: hidden;
  border: 1rpx solid rgba(51, 65, 85, 0.6);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  border-bottom: 1rpx solid rgba(51, 65, 85, 0.4);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
}

.menu-label {
  font-size: 30rpx;
  color: #e2e8f0;
}

.menu-value {
  font-size: 28rpx;
  color: #64748b;
  margin-right: 16rpx;
}

.menu-arrow {
  font-size: 36rpx;
  color: #64748b;
}

.btn-logout {
  margin-top: 48rpx;
  background: transparent;
  color: #ef4444;
  border: 2rpx solid rgba(239, 68, 68, 0.2);
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
}
