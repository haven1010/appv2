.card {
  background: #1e293b;
  border-radius: 12rpx;
  padding: 0 30rpx;
  margin-top: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.form-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.form-group:last-child {
  border-bottom: none;
}

.label {
  width: 200rpx;
  font-size: 30rpx;
  color: #f1f5f9;
  font-weight: 500;
}

.value {
  flex: 1;
  font-size: 30rpx;
  color: #94a3b8;
  text-align: right;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #34d399;
  text-align: right;
  height: 48rpx;
  border: none;
  background: transparent;
}

.btn-save {
  margin-top: 60rpx;
  background: #34d399;
  color: #fff;
  border-radius: 12rpx;
  font-weight: bold;
}
