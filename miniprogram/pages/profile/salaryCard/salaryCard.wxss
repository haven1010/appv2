.container {
  padding: 40rpx;
}

.placeholder-card {
  background: #1e293b;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.placeholder-card .icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.placeholder-card .title {
  font-size: 34rpx;
  color: #f1f5f9;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.placeholder-card .desc {
  font-size: 28rpx;
  color: #94a3b8;
}
