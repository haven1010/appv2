.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #020617;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #1e293b;
  border-top: 4rpx solid #10b981;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #64748b;
}

.stats-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  flex: 1;
  background: rgba(15, 23, 42, 0.8);
  border: 1rpx solid rgba(51, 65, 85, 0.5);
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  text-align: center;
}

.stat-card.accent {
  border-color: rgba(16, 185, 129, 0.3);
  background: rgba(16, 185, 129, 0.05);
}

.stat-card.warn {
  border-color: rgba(245, 158, 11, 0.3);
  background: rgba(245, 158, 11, 0.05);
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.stat-card.accent .stat-value {
  color: #34d399;
}

.stat-card.warn .stat-value {
  color: #fbbf24;
}

.stat-label {
  font-size: 22rpx;
  color: #64748b;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #e2e8f0;
  margin-bottom: 20rpx;
}

.empty-section {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 26rpx;
  color: #475569;
}

.salary-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.salary-card {
  background: rgba(15, 23, 42, 0.8);
  border: 1rpx solid rgba(51, 65, 85, 0.5);
  border-radius: 24rpx;
  padding: 28rpx;
}

.salary-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.salary-info {
  display: flex;
  flex-direction: column;
}

.salary-base {
  font-size: 28rpx;
  font-weight: 600;
  color: #f1f5f9;
  margin-bottom: 6rpx;
}

.salary-date {
  font-size: 22rpx;
  color: #64748b;
}

.salary-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #34d399;
}

.salary-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.detail-item {
  font-size: 22rpx;
  color: #94a3b8;
  background: rgba(30, 41, 59, 0.8);
  padding: 4rpx 14rpx;
  border-radius: 8rpx;
}

.salary-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(51, 65, 85, 0.3);
}

.salary-status {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.salary-status.pending {
  background: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
}

.salary-status.confirmed {
  background: rgba(59, 130, 246, 0.15);
  color: #60a5fa;
}

.salary-status.paid {
  background: rgba(16, 185, 129, 0.15);
  color: #34d399;
}

.confirm-btn {
  background: #10b981;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  padding: 10rpx 30rpx;
  border-radius: 16rpx;
}
