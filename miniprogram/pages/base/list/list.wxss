/* pages/base/list/list.wxss */
.filter-bar {
  display: flex;
  background-color: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.filter-item.active {
  background-color: #4ade80;
  color: white;
}

.base-list {
  padding: 0 20rpx;
}

.base-item {
  margin-bottom: 20rpx;
}

.base-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.base-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.base-category {
  font-size: 24rpx;
  color: #4ade80;
  background-color: #f0fdf4;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.base-address {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

.base-status {
  margin-top: 20rpx;
}

.status-text {
  font-size: 24rpx;
  color: #4ade80;
}

.status-text.pending {
  color: #f59e0b;
}

.empty, .loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
