/* pages/register/register.wxss */
.register-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 32rpx;
  padding-bottom: 80rpx;
  background: linear-gradient(135deg, #0f172a 0%, #020617 100%);
}

/* 头部 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.logo-circle {
  width: 100rpx;
  height: 100rpx;
  background: rgba(52, 211, 153, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(52, 211, 153, 0.3);
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 2rpx;
}

.app-desc {
  font-size: 22rpx;
  color: #64748b;
  margin-top: 8rpx;
}

/* 卡片 */
.register-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.97);
  border-radius: 30rpx;
  padding: 48rpx 36rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.25);
  box-sizing: border-box;
}

.card-title {
  font-size: 42rpx;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 36rpx;
}

/* 步骤指示 */
.steps {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  padding: 24rpx 0;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.step-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: #e2e8f0;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.step.active .step-dot {
  background: linear-gradient(135deg, #34d399, #10b981);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.4);
}

.step-label {
  font-size: 20rpx;
  color: #94a3b8;
}

.step.active .step-label {
  color: #10b981;
  font-weight: 600;
}

.step-line {
  width: 80rpx;
  height: 3rpx;
  background: #e2e8f0;
  margin: 0 24rpx;
  margin-bottom: 24rpx;
}

/* 表单分组 */
.form-section {
  margin-bottom: 32rpx;
}

.section-label {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #334155;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.section-icon {
  font-size: 28rpx;
}

.section-optional {
  font-size: 20rpx;
  color: #94a3b8;
  font-weight: 400;
  background: #f1f5f9;
  padding: 4rpx 14rpx;
  border-radius: 6rpx;
  margin-left: auto;
}

/* 表单项 */
.form-item {
  margin-bottom: 20rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 22rpx 24rpx;
  border: 2rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.input-wrapper.focus {
  background: #fff;
  border-color: #34d399;
  box-shadow: 0 0 0 6rpx rgba(52, 211, 153, 0.1);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  opacity: 0.7;
  flex-shrink: 0;
}

.input-field {
  flex: 1;
  font-size: 28rpx;
  color: #0f172a;
  height: 44rpx;
}

.placeholder {
  color: #94a3b8;
  font-size: 26rpx;
}

.required-star {
  color: #ef4444;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 8rpx;
  flex-shrink: 0;
}

/* 输入提示 */
.input-hint {
  margin-top: 8rpx;
  padding-left: 12rpx;
}

.hint-text {
  font-size: 22rpx;
  color: #94a3b8;
}

.input-hint.success .hint-text {
  color: #10b981;
}

/* 错误提示 */
.error-msg {
  background: rgba(239, 68, 68, 0.08);
  border: 1rpx solid rgba(239, 68, 68, 0.2);
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  color: #dc2626;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.error-msg::before {
  content: "⚠";
  margin-right: 12rpx;
  font-size: 28rpx;
}

/* 注册按钮 */
.register-btn {
  background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
  color: white;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 700;
  padding: 26rpx 0;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.35);
  border: none;
  letter-spacing: 2rpx;
}

.register-btn::after {
  border: none;
}

.register-btn-hover {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  opacity: 0.9;
}

.register-btn[disabled] {
  background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
  box-shadow: none;
}

/* 底部链接 */
.footer-links {
  margin-top: 36rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-text {
  font-size: 26rpx;
  color: #64748b;
}

.login-link {
  color: #10b981;
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 10rpx;
}

.login-link:active {
  opacity: 0.7;
}
