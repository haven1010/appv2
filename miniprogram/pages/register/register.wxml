<!--pages/register/register.wxml-->
<view class="container">
  <view class="card">
    <view class="title">注册</view>
    <view class="subtitle">请填写真实信息</view>

    <view class="input-group">
      <text class="input-label">姓名 *</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入真实姓名"
        value="{{name}}"
        bindinput="onInputName"
      />
    </view>

    <view class="input-group">
      <text class="input-label">身份证号 *</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入18位身份证号"
        value="{{idCard}}"
        bindinput="onInputIdCard"
        maxlength="18"
      />
    </view>

    <view class="input-group">
      <text class="input-label">手机号 *</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入11位手机号"
        value="{{phone}}"
        bindinput="onInputPhone"
        maxlength="11"
      />
    </view>

    <view class="input-group">
      <text class="input-label">紧急联系人（姓名及关系）</text>
      <input 
        class="input" 
        type="text" 
        placeholder="例如：李四-配偶"
        value="{{emergencyContact}}"
        bindinput="onInputEmergencyContact"
      />
    </view>

    <view class="input-group">
      <text class="input-label">紧急联系人电话</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入紧急联系人电话"
        value="{{emergencyPhone}}"
        bindinput="onInputEmergencyPhone"
        maxlength="11"
      />
    </view>

    <view class="error-text" wx:if="{{error}}">{{error}}</view>

    <button 
      class="btn-primary" 
      bindtap="handleRegister"
      loading="{{loading}}"
      disabled="{{loading}}"
    >
      {{loading ? '注册中...' : '注册'}}
    </button>
  </view>
</view>
